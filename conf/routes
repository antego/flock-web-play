# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

## An example controller showing a sample home page
#GET     /                           controllers.HomeController.index
## An example controller showing how to use dependency injection
#GET     /count                      controllers.CountController.count
## An example controller showing how to write asynchronous code
#GET     /message                    controllers.AsyncController.message
#
## MyMap static resources from the /public folder to the /assets URL path
#GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

#TODO to versioned()
GET           /                  controllers.Assets.at(path="/public", file = "/index.html")


GET           /orders        controllers.OrderController.getAll()

GET           /orders/:id        controllers.OrderController.get(id: String)

POST          /orders            controllers.OrderController.create()

PUT           /orders/:id        controllers.OrderController.update(id: String)

DELETE        /orders/:id        controllers.OrderController.delete(id: String)

GET           /*file             controllers.Assets.at(path="/public", file)
